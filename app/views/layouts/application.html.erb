<!DOCTYPE html>
<html>
  <head>
    <title>Контрольная точка</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="message_wrapper <%= 'notice' if notice %> <%= 'alert' if alert %>" <%= "style=display:none;" unless notice || alert %>>
      <%= notice %>
      <%= alert %>
    </div>

    <div class="header">
      <div class="logo">
        <%= link_to "Контрольная точка", root_path %>
      </div>
      <div class="title">АИС Контрольная точка</div>
      <div class="auth_block">
        <%= render :partial => "sso-auth/shared/user_box" %>
      </div>
    </div>

    <div class='menu'>
      <%= link_to "Список обеспечивающих кафедр", subdivisions_path if can? :index, Subdivision.new %>
      <%= link_to "Управление правами доступа", permissions_path    if can? :manage, Permission.new %>
    </div>

    <%= yield %>

    <div class="footer">
      По всем вопросам пишите на <a href='mailto:tusur-checkpoint@openteam.ru'>tusur-checkpoint@openteam.ru</a>
      <%= link_to "Инструкция", '/files/help.pdf' %>
    </div>
    <!-- Start SiteHeart code -->
    <script>
      (function(){
       // your widget ID
       var widget_id = 644637;
       _shcp =[{widget_id : widget_id}];
       // set default language
       var lang =(navigator.language || navigator.systemLanguage
         || navigator.userLanguage ||"en")
       .substr(0,2).toLowerCase();
       // script url
       var url ="widget.siteheart.com/widget/sh/"+ widget_id +"/"+ lang +"/widget.js";
       var hcc = document.createElement("script");
       hcc.type ="text/javascript";
       hcc.async =true;
       hcc.src =("https:"== document.location.protocol ?"https":"http")
       +"://"+ url;
       var s = document.getElementsByTagName("script")[0];
       s.parentNode.insertBefore(hcc, s.nextSibling);
       })();
     </script>
     <!-- End SiteHeart code -->
   </body>
</html>
